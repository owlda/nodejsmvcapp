<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        
        <% if (prods != null) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item" style="margin-bottom: 1rem;">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src=<%= product.image %> alt="A Book">
                        </div>
                        <div class="card__content">                            
                            <p class="product__description"><%= product.desc %></p>
                        </div>
                        <div class="card_actions" style="margin-left: 40%; padding-bottom: 1rem;">
                            <a href="/details/<%= product._id %>" class="btn">Details</a>
                        </div>                        
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>    
<%- include('includes/end.ejs') %>